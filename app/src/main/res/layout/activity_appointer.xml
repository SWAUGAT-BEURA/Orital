<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_1"
    tools:context=".AppointerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_1"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:text="MAKE APPOINTMENTS"
                android:layout_gravity="center"
                android:textSize="30sp"/>
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hospital"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/Hospital_name"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Hospital Name"
                android:gravity="center_horizontal"
                android:textColorHint="@color/colorAccent"/>
            <EditText
                android:id="@+id/Patient_name"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Patient's Name"
                android:gravity="center_horizontal"
                android:textColorHint="@color/colorAccent"/>
            <EditText
                android:id="@+id/Patient_age"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter  Patient's Age"
                android:gravity="center_horizontal"
                android:textColorHint="@color/colorAccent"/>
            <EditText
                android:id="@+id/Patient_address"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Address"
                android:gravity="center_horizontal"
                android:textColorHint="@color/colorAccent"/>

            <EditText
                android:id="@+id/Problem"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What is the Problem?"
                android:gravity="center_horizontal"
                android:textColorHint="@color/colorAccent"/>
            <EditText
                android:id="@+id/Doctor"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name of the Doctor"
                android:gravity="center_horizontal"
                android:textColorHint="@color/colorAccent"/>
            <EditText
                android:id="@+id/Date"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date and Time"
                android:gravity="center_horizontal"
                android:textColorHint="@color/colorAccent"/>
            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="order ambulance"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"/>
            <Button
                android:id="@+id/confirm"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="confirm booking"
                android:layout_gravity="center"
                android:background="@drawable/bg2"
                android:padding="5dp"
                android:textStyle="bold"/>

            <ProgressBar
                android:id="@+id/progressbar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:visibility="invisible">

            </ProgressBar>
        </LinearLayout>

    </LinearLayout>



</ScrollView>